<properties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

    <!-- Wybór tła (1-13) -->
    <property id="BackgroundChoice" type="number">1</property>
    
    <!-- Wybór fontu (1-5) -->
    <property id="FontChoice" type="number">1</property>

    <!-- Kolory poszczególnych elementów -->
    <property id="TimeColor" type="number">0xFFFFFF</property>
    <property id="DateColor" type="number">0xFFFFFF</property>
    <property id="HeartRateColor" type="number">0xFF0000</property>
    <property id="TemperatureColor" type="number">0xFFFF00</property>
    <property id="StepsColor" type="number">0x00AAFF</property>
    
    <!-- Jednostka temperatury: 1 = Celsius, 2 = Fahrenheit -->
    <property id="TemperatureUnit" type="number">1</property>
    
    <!-- Format 24h -->
    <property id="UseMilitaryFormat" type="boolean">false</property>

</properties>