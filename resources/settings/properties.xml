<properties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

    <!-- Wybór tła (1-13) -->
    <property id="BackgroundChoice" type="number">1</property>
    
    <!-- Wybór fontu (1-5) -->
    <property id="FontChoice" type="number">1</property>

    <!-- Kolory HEX -->
    <property id="TimeColor" type="string">FFFFFF</property>
    <property id="DateColor" type="string">FFFFFF</property>
    <property id="HeartRateColor" type="string">FF0000</property>
    <property id="TemperatureColor" type="string">FFFF00</property>
    <property id="StepsColor" type="string">00AAFF</property>
    
    <!-- Kolory baterii HEX -->
    <property id="BatteryColorFull" type="string">008000</property>
    <property id="BatteryColorMid" type="string">FFFF00</property>
    <property id="BatteryColorLow" type="string">6E0300</property>
    
    <!-- Jednostka temperatury: 1 = Celsius, 2 = Fahrenheit -->
    <property id="TemperatureUnit" type="number">1</property>
    
    <!-- Źródło temperatury: 1 = Weather, 2 = Sensor -->
    <property id="TemperatureSource" type="number">1</property>
    
    <!-- Format 24h -->
    <property id="UseMilitaryFormat" type="boolean">false</property>

</properties>